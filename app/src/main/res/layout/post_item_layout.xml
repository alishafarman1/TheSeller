<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="15dp"
    android:elevation="10dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/postItemImageIv"
            android:scaleType="centerCrop"
            tools:src="@drawable/sample_pic_1"
            android:layout_width="130dp"
            android:layout_height="100dp"/>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/postItemTitleTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Rs. 20,000"
                android:textSize="19sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/postItemPriceTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                tools:text="Corolla XLI 2019 - Mint Condition"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                />

            <TextView
                android:id="@+id/postItemDateTv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:text="2 Dec 2019"
                android:layout_gravity="end"
                android:gravity="bottom"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
